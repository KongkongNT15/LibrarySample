<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="LibrarySample.UserControls.ConsolePane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:root="using:LibrarySample"
    xmlns:local="using:LibrarySample.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MinHeight="{x:Bind root:Data.MinControlHeight}"
    RequestedTheme="Dark">

    <ScrollViewer x:Name="RootViewer" Background="#0C0C0C" CornerRadius="4" MaxHeight="512" >
        <TextBlock x:Name="OutputText" Foreground="#CCCCCC" TextWrapping="Wrap" FontFamily="MS Gothic" VerticalAlignment="Center" />
    </ScrollViewer>
</UserControl>
